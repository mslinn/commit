  "version": "0.2.0",
  "configurations": [
    {
      "args": ["lib"],
      "debugPort": "0",
      "name": "Debug with rdbg",
      "script": "exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "script": "${file}",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "name": "Run selected Ruby file with ruby_lsp",
      "program": "ruby ${file}",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "debugPort": "0",
      "name": "Attach with rdbg",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "name": "Attach with ruby_lsp",
      "request": "attach",
      "type": "ruby_lsp",
    }
  ]
}
