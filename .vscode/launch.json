  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "-a",
        "Test_tag",
        "-v", "2",
      ],
      "debugPort": "0",
      "name": "Debug current git repo and verbosity 2 with rdbg",
      "script": "${workspaceFolder}/exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "-m", "Test_commit",
        "${env:peace_isnt_found_at_the_end_of_a_gun}",
      ],
      "debugPort": "0",
      "name": "Debug song/comment with rdbg",
      "script": "${workspaceFolder}/exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "-a", "Test_tag",
        "${env:peace_isnt_found_at_the_end_of_a_gun}",
      ],
      "debugPort": "0",
      "name": "Debug song/tag with rdbg",
      "script": "${workspaceFolder}/exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "${env:peace_isnt_found_at_the_end_of_a_gun}",
      ],
      "debugPort": "0",
      "name": "Debug song with rdbg",
      "script": "${workspaceFolder}/exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
      ],
      "debugPort": "0",
      "name": "Debug current repository with rdbg",
      "script": "${workspaceFolder}/exe/commit",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "script": "${file}",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "name": "Run selected Ruby file with ruby_lsp",
      "program": "ruby ${file}",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "debugPort": "0",
      "name": "Attach with rdbg",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "name": "Attach with ruby_lsp",
      "request": "attach",
      "type": "ruby_lsp",
    }
